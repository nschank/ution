import random, sys

def get():
	movies = []
	with open('movielist', 'r') as f:
		for line in f:
			movies.append(line)
	print random.choice(movies)

def remove(title):
	movies = []
	found = False
	with open('movielist', 'r') as f:
		for line in f:
			if line != title:
				movies.append(line)
			else:
				found = True
	if found:
		with open('movielist', 'w') as f:
			print>>f, ''.join(movies)	
		print title[:-1], "was marked as watched. Yay!"
	else:
		print "Could not find", title[:-1], "\b! Oh No!"

args = sys.argv
if len(args) < 2:
	get()
else:
	remove(' '.join(args[1:]) + '\n')
